#!/bin/bash

set -e

mkdir -p /etc/skel
mkdir -p /usr/lib/parrot-skel/etc/skel
cat /etc/bashrc > /etc/skel/.bashrc
cat /etc/bashrc > /usr/lib/parrot-skel/etc/skel/.bashrc

echo -e "
# Dynamic resolv.conf(5) file for glibc resolver(3) generated by resolvconf(8)
#     DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

# ParrotDNS
nameserver 92.222.97.145
nameserver 192.99.85.244

# OpenDNS
nameserver 208.67.222.222
nameserver 208.67.220.220
" > /etc/resolvconf/resolv.conf.d/head || true
